<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Beans.LineaPedido" table="LINEA_PEDIDO" catalog="2aDISTRIBUCION" optimistic-lock="version">
        <composite-id name="id" class="Beans.LineaPedidoId">
            <key-property name="numLinPed" type="short">
                <column name="Num_Lin_Ped" />
            </key-property>
            <key-property name="numPed" type="int">
                <column name="Num_Ped" />
            </key-property>
        </composite-id>
        <many-to-one name="pedido" class="Beans.Pedido" update="false" insert="false" fetch="select">
            <column name="Num_Ped" not-null="true" />
        </many-to-one>
        <many-to-one name="producto" class="Beans.Producto" fetch="select">
            <column name="Cod_Prod" not-null="true" />
        </many-to-one>
        <property name="cantidad" type="short">
            <column name="Cantidad" not-null="true" />
        </property>
        <property name="estado" type="string">
            <column name="Estado" length="13" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
